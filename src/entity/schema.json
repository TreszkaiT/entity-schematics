{
    "$schema": "http://json-schema.org/schema",
    "$id": "entity",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "Name",
            "x-prompt": "What is entity name?"
        },
        "modules": {
            "description": "Module names",
            "type": "array",
            "x-prompt": {
                "message": "Which modules do you want to generate?",
                "type": "list",
                "items": [
                    "api", "authentication", "authorization", "config", "data", "store", "form", "util", "view", "collection", "admin", "page"
                ]
            }
        },
        "srcPath": {
            "type": "string",
            "default": "src",
            "description": "Src path",
            "x-prompt": "Generate the src directory files: ( src )"
        },
        "appPath": {
            "type": "string",
            "default": "src/app",
            "description": "App path",
            "x-prompt": "Generate the src/app directory files: ( src/app )"
        },
        "modulePath": {
            "type": "string",
            "default": "src/app/module",
            "description": "Module path",
            "x-prompt": "Where do you want to generate the selected modules? ( src/app/module )"
        },
        "apiPath": {
            "type": "string",
            "default": "src/app/api",
            "description": "Api path",
            "x-prompt": "Where is your project api folder? ( src/app/api )"
        },
        "viewPath": {
            "type": "string",
            "default": "src/app/page",
            "description": "View (Page) path",
            "x-prompt": "Where is your project view folder? ( src/app/page )"
        },
        "authorization": {
            "type": "boolean",
            "default": false,
            "description": "Authorization add",
            "x-prompt": "Add Authorization in your code?  ( true/false )"
        }
    },
    "required": ["name"]
}