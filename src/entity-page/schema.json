{
    "$schema": "http://json-schema.org/schema",
    "$id": "entity-page",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "name"
        },
        "apiPath": {
            "type": "string",
            "description": "Location of api folder. Relative from project root. ( src/app/api )"
        },
        "modulePath": {
            "type": "string",
            "description": "Module path"
        },
        "viewPath": {
            "type": "string",
            "description": "Location of page (view) folder. Relative from project root. ( src/app/page )"
        }
    },
    "required": ["name", "apiPath", "viewPath", "modulePath"]
}
